# Backend Environment Variables (Copy to .env and fill in your API keys)

# Server Configuration
NODE_ENV=production
PORT=10000

# API Keys (Get these from respective providers)
TOMTOM_API_KEY=your_tomtom_api_key_here
MAPQUEST_API_KEY=your_mapquest_api_key_here
HERE_API_KEY=your_here_api_key_here
NATIONAL_HIGHWAYS_API_KEY=your_national_highways_key_here

# StreetManager API - Official UK Roadworks Data
# Apply for access at: https://www.streetmanager.service.gov.uk/
STREET_MANAGER_API_KEY=your_streetmanager_api_key_here

# Database (Supabase)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key_here

# Render.com specific
RENDER=true
